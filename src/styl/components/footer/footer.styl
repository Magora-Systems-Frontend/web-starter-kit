.footer
  position: relative;
  background gray;
  z-index: 10;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.2);
  padding: 20px;
  border-top: 1px solid #ddd;
  flex 0 0 auto

  &__wrap
    width:100%

    &_block-info
      display flex
      justify-content flex-start
      align-items center
      @media(max-width 992px)
        justify-content space-between

      &--logo
        font-size: 30px
        color: #000
        line-height 1

        img
          height:30px;

      &--copy
        font-size: 13px;
        line-height: 18px;
        margin-left 30px
        @media(max-width 992px)
          margin 0

    &_block-pages
      display flex
      justify-content flex-end
      align-items center
      @media(max-width 992px)
        justify-content space-between
        margin-top 30px

      &--page
        color: black
        font-weight bold
        font-size 15px
        margin-left 20px
        text-decoration none
        @media(max-width 992px)
          margin 0


