feedback
  flex 1 0 auto

.feedback-form
  margin 40px auto
  width 50%
  padding: 0 20px
  @media(max-width 768px)
    width: 100%

  .form-group
    position relative
    margin-bottom 30px

  .invalid-feedback
    position: absolute
    bottom: -20px

  .invalid-email
    color: #dc3545
    font-size 13px
    display none

  label
    span
      color #dc3545;

  .success-send
    color: #28a745
    font-size 13px
    margin-left 20px
    display none

  .error-send
    color: #dc3545
    font-size 13px
    margin-left 20px
    display none


